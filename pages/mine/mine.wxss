/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.container .golbalimg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -99;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  overflow: hidden;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  background-image: '/images/timg.jpg'
}

.usermotto {
  margin-top: 200px;
}
.personal-Signature{
  width: 80%;
  margin-top: 50rpx;
  font-size: 25rpx;
  color: #666;
}
.userdetail{
  margin-top: 100rpx;
  width: 100%;
}
.userdetail image{
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
}

.userdetailsingle{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #666;
}
.userdetailsingle text{
  margin-right:440rpx;
}