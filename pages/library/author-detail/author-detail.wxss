page{
  width: 100%;
}
.authordetail{
  width: 100%;
  padding: 0 35rpx;
  box-sizing: border-box;
  text-align: justify;
}
.authorinfo{
  margin-bottom: 20rpx;
}
.authorinfo text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  font-size: 35rpx;
